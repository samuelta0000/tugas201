<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <Button 
        android:id="@+id/cancelpb"
        android:text="CANCEL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    
    <Spinner
        android:id="@+id/spinner"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/cancelpb"/>
    
    <TextView
        android:id="@+id/tvisipesan"
        android:layout_marginTop="10dip"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_below="@+id/spinner"
        android:text="Pesan_Baru"
        />
    
    <EditText
        android:id="@+id/etpesanbaru"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:hint="isi_pesan"
        android:maxLines="6"
        android:minLines="4"
        android:gravity="top|left"
        android:inputType="textMultiLine|textCapSentences"
        android:layout_below="@+id/tvisipesan"
     />
    
    <Button 
        android:id="@+id/kirimpb"
        android:layout_below="@+id/etpesanbaru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:text="Kirim pesan"/>

</RelativeLayout>
